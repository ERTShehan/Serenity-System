<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="531.0" prefWidth="683.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.assignment.serenity.controller.DashboardController">
    <top>
        <HBox style="-fx-background-color: #3498db; -fx-padding: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 20;" text="Serenity Mental Health Therapy Center" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblUserRole" style="-fx-text-fill: white; -fx-font-size: 16;" />
        </HBox>
    </top>

    <left>
        <VBox prefHeight="481.0" prefWidth="145.0" style="-fx-background-color: #2980b9; -fx-spacing: 10; -fx-padding: 10;">
            <Button onAction="#onPatientAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" text="Patients" />
            <Button onAction="#onProgramAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" text="Programs" />
            <Button onAction="#onTherapistAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" text="Therapists" />
            <Button onAction="#onPaymentAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" text="Payments" />
            <Region VBox.vgrow="ALWAYS" />
            <Button onAction="#onLogoutAction" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16;" text="Logout" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" prefHeight="460.0" prefWidth="533.0" />
    </center>
</BorderPane>
