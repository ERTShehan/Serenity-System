<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="413.0" prefWidth="461.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.assignment.serenity.controller.ReportsController">
    <children>
        <Label layoutX="20.0" layoutY="14.0" style="-fx-text-fill: #1a8eda;" text="Reports">
            <font>
                <Font name="System Bold" size="25.0" />
            </font>
        </Label>

        <VBox layoutX="20.0" layoutY="60.0" prefHeight="269.0" prefWidth="378.0" spacing="20.0">
            <children>
                <Label style="-fx-font-weight: bold;" text="Select Patient:" />
                <ComboBox fx:id="cmbPatients" prefWidth="300.0" />

                <Button onAction="#btnGenerateTherapyReport" prefHeight="39.0" prefWidth="364.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Generate Therapy Programs Report" />
                <Button onAction="#btnGeneratePaymentReport" prefHeight="35.0" prefWidth="362.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Generate Payments Report" />
                <Button onAction="#btnGenerateAllPatientsReport" prefHeight="39.0" prefWidth="364.0" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Generate All Patients Report" />
            </children>
        </VBox>
    </children>
</AnchorPane>
